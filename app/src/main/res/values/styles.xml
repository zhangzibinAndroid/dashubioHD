<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/px38</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/corners_bg_mid_selector</item>

    </style>

    <style name="ViewLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px01</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="ViewLineStyleSecond">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px02</item>
        <item name="android:background">@color/divider</item>
    </style>


    <style name="ReisterDialogTextIntroduce">
        <item name="android:layout_width">@dimen/px80</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/px30</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/px05</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ReisterDialogTextContext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">@dimen/px10</item>
        <item name="android:textSize">@dimen/px30</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ReisterDialogLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px100</item>
        <item name="android:padding">@dimen/px15</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CitySelTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 自定义仿IOS的ActionSheet底部Dialog的样式 ，有模糊效果 -->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <style name="healthArchivsLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px70</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/px30</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="healthArchivsLayoutStyleAdd">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/px30</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="healthArchivsTextIntroduceStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_marginRight">@dimen/px10</item>
        <item name="android:textSize">@dimen/px30</item>
        <item name="android:layout_weight">7</item>
    </style>

    <style name="healthArchivsEdtextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">@dimen/px30</item>
        <item name="android:layout_marginRight">@dimen/px10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">@dimen/px10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/gray_circle</item>
    </style>

    <style name="healthArchivsImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/px70</item>
        <item name="android:layout_marginLeft">@dimen/px30</item>
        <item name="android:layout_marginRight">@dimen/px50</item>
        <item name="android:background">@color/lv_bg</item>
        <item name="android:src">@drawable/add_blue_icon</item>
    </style>


    <style name="TextViewHistoryStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/px15</item>
        <item name="android:paddingBottom">@dimen/px15</item>
        <item name="android:paddingLeft">@dimen/px10</item>
        <item name="android:paddingRight">@dimen/px10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/btn_color</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">@dimen/px30</item>
    </style>


    <style name="HistoryDataTagFlowLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/px10</item>
        <item name="android:layout_marginTop">@dimen/px12</item>
        <item name="gravity">left</item>
    </style>

</resources>
