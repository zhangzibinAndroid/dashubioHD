<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/px10"
    android:paddingBottom="@dimen/px10"
    android:gravity="center"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80"
        android:paddingBottom="@dimen/px10"
        android:weightSum="6">

        <TextView
            android:id="@+id/tv_item_index_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="张三"
            android:textColor="@color/black"
            android:textSize="@dimen/px32" />

        <TextView
            android:id="@+id/tv_item_index_age"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="22"
            android:textColor="@color/black"
            android:textSize="@dimen/px32" />

        <TextView
            android:id="@+id/tv_item_index_subject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="血压"
            android:textColor="@color/black"
            android:textSize="@dimen/px32" />

        <TextView
            android:id="@+id/tv_item_index_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/px32" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_tv"
                android:layout_width="@dimen/px45"
                android:layout_height="@dimen/px60"
                android:background="@drawable/btn_blue_selector"
                android:text="@string/view"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/px32" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/result_status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginLeft="@dimen/px20"
        android:layout_marginRight="@dimen/px20"
        android:visibility="gone">

        <TextView
            android:id="@+id/result_status_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:padding="@dimen/px20"
            android:textColor="@color/black"
            android:textSize="@dimen/px32" />

        <TextView
            android:id="@+id/warning_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:layout_weight="1"
            android:padding="@dimen/px20"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/px32" />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px02"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/px20"
        android:layout_marginRight="@dimen/px20"
        />

</com.zhy.autolayout.AutoLinearLayout>
